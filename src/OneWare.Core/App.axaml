<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OneWare.Core"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="OneWare.Core.App" x:CompileBindings="False">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Resources>
        <ControlRecycling x:Key="ControlRecyclingKey" TryToUseIdAsKey="True" />
    </Application.Resources>
    
    <Application.Styles>
        <SimpleTheme>
            <SimpleTheme.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceInclude Source="avares://OneWare.Core/Styles/Accents/Base.axaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </SimpleTheme.Resources>
        </SimpleTheme>
        
        <DockSimpleTheme />

        <StyleInclude Source="avares://AvaloniaEdit/Themes/Simple/AvaloniaEdit.xaml" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml" />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Simple/Simple.xaml" />
        <StyleInclude Source="avares://OneWare.Core/Styles/IdeStyles.axaml" />
        <StyleInclude Source="avares://OneWare.Essentials/Controls/SharedControls.axaml" />
        <StyleInclude Source="avares://OneWare.Settings/Views/SettingStyles.axaml" />
        
        <Style Selector="DockControl">
            <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" Value="{StaticResource ControlRecyclingKey}" />
        </Style>
        
        <Style Selector="DocumentControl">
            <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" Value="{x:Null}" />
        </Style>
    </Application.Styles>

</Application>