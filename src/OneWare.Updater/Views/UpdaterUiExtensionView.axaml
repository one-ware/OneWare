<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OneWare.Updater.ViewModels"
             xmlns:converters="clr-namespace:OneWare.Essentials.Converters;assembly=OneWare.Essentials"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OneWare.Updater.Views.UpdaterUiExtensionView" x:DataType="viewModels:UpdaterViewModel" IsVisible="{Binding ShowUpdateNotification}">
    <Button ToolTip.Tip="Update OneWare Studio" Command="{Binding OpenUpdateViewAsync}">
        <Image Source="{DynamicResource VsImageLib.Download16X}" />
    </Button>
</UserControl>
